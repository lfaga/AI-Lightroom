<Window x:Class="AILightroom.ProvidersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:AILightroom.Ui.Controls"
        Title="Providers" Height="260" Width="600"
        Icon="/AILightroom;component/Resources/AppIcon.ico"
        Style="{StaticResource DefaultWindowStyle}"
        Loaded="ProvidersWindow_OnLoaded">
  <Grid Margin="8">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200" Name="ProvidersListColumn" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid Grid.Column="0" Margin="0,0,8,0">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,0,0,4"
                    Grid.Row="0">
        <ListBox Name="ListFiles" SelectionChanged="ListFiles_SelectionChanged">
          <ListBoxItem>Item1</ListBoxItem>
          <ListBoxItem>Item2</ListBoxItem>
          <ListBoxItem>Item3</ListBoxItem>
        </ListBox>
      </ScrollViewer>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
        <Button Name="BtnNewProvider" Style="{StaticResource IconicButtonStyle}"
                ToolTip="Create new provider">
          <Image Source="{StaticResource BmpNew }" Stretch="None" IsHitTestVisible="False"/>
        </Button>
        <Button Name="BtnDeleteProvider" Style="{StaticResource IconicButtonStyle}"
                ToolTip="Delete selected provider">
          <Image Source="{StaticResource BmpDelete}" Stretch="None" IsHitTestVisible="False" />
        </Button>
        <Button Name="BtnRefrehProviderList" Style="{StaticResource IconicButtonStyle}"
                ToolTip="Refresh providers list">
          <Image Source="{StaticResource BmpRefresh}" Stretch="None" IsHitTestVisible="False" />
        </Button>
      </StackPanel>
    </Grid>
    <GridSplitter Name="GridSplit" Grid.Column="1" Width="1" HorizontalAlignment="Center"
                  VerticalAlignment="Stretch" />
    <Grid Grid.Column="2" Margin="8,0,0,0">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <Grid Grid.Row="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0">Name</Label>
        <TextBox Name="TxtName" Grid.Column="1" Grid.Row="0" />
        <Label Grid.Column="0" Grid.Row="1">Endpoint</Label>
        <TextBox Name="TxtEndpoint" Grid.Column="1" Grid.Row="1" />
        <Label Grid.Column="0" Grid.Row="2">API Key</Label>
        <TextBox Name="TxtApiKey" Grid.Column="1" Grid.Row="2" />
        <Label Grid.Column="0" Grid.Row="3">Request Type</Label>
        <ComboBox Name="ComboRequestType" Grid.Column="1" Grid.Row="3" />
        <Label Grid.Column="0" Grid.Row="4">Output Type</Label>
        <ComboBox Name="ComboOutputType" Grid.Column="1" Grid.Row="4" />
        <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" Margin="0,4">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
          <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Orientation="Vertical">
            <TreeView Name="TreeInputSchema" MinWidth="160" MinHeight="160" 
                      SelectedItemChanged="TreeInputSchema_SelectedItemChanged" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
              <Button x:Name="BtnInpSchAdd" Style="{StaticResource IconicButtonStyle}"
                      ToolTip="Add Schema Element" Click="BtnInpSchAdd_OnClick">
                <Image Source="{StaticResource BmpSmallPlus}" Width="16" Height="16" />
              </Button>
              <Button x:Name="BtnInpSchRemove" Style="{StaticResource IconicButtonStyle}"
                      ToolTip="Remove Schema Element" Click="BtnInpSchRemove_OnClick">
                <Image Source="{StaticResource BmpSmallMinus}" Width="16" Height="16" />
              </Button>
            </StackPanel>
          </StackPanel>
          <Border BorderBrush="{StaticResource MediumBrush}" BorderThickness="1" Grid.Column="1" Grid.Row="0" Margin="2,0,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0">Name</Label>
                <TextBox Name="TxtElementName" Grid.Column="1" Grid.Row="0" />
                <Label Grid.Column="0" Grid.Row="1">Description</Label>
                <TextBox Name="TxtElementDescription" Grid.Column="1" Grid.Row="1" />
                <Label Grid.Column="0" Grid.Row="2">Type</Label>
                <ComboBox Name="ComboElementType" Grid.Column="1" Grid.Row="2" />
                <Label Grid.Column="0" Grid.Row="3">Minimum</Label>
                <controls:NumberTextBox x:Name="NumberElementMininmum" Grid.Column="1" Grid.Row="3" />
                <Label Grid.Column="0" Grid.Row="4">Maximum</Label>
                <controls:NumberTextBox x:Name="NumberElementMaximum" Grid.Column="1" Grid.Row="4" />
                <Label Grid.Column="0" Grid.Row="5">Step</Label>
                <controls:NumberTextBox x:Name="NumberElementStep" Grid.Column="1" Grid.Row="5" />
                <Label Grid.Column="0" Grid.Row="6">Choices</Label>
                <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="6">
                  <ListBox x:Name="ListElementChoices" MinHeight="24"/>
                  <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnChoiceAdd" Style="{StaticResource IconicButtonStyle}">
                      <Image Source="{StaticResource BmpSmallPlus}" Width="16" Height="16" />
                    </Button>
                    <Button x:Name="BtnChoiceRemove" Style="{StaticResource IconicButtonStyle}">
                      <Image Source="{StaticResource BmpSmallMinus}" Width="16" Height="16" />
                    </Button>
                  </StackPanel>
                </StackPanel>
                <Label Grid.Column="0" Grid.Row="7">Default</Label>
                <TextBox Name="TxtElementDefault" Grid.Column="1" Grid.Row="7" />
                <Label Grid.Column="0" Grid.Row="8">Required</Label>
                <CheckBox Name="ChkElementRequired" Grid.Column="1" Grid.Row="8" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="9">
                  <Button Name="BtnElementSave" Style="{StaticResource IconicButtonStyle}" MinWidth="100">
                    <StackPanel Orientation="Horizontal">
                      <Image Source="{StaticResource BmpSave}" IsHitTestVisible="False" Stretch="None" />
                      <Label>Save</Label>
                    </StackPanel>
                  </Button>
                  <Button Name="BtnElementCancel" Style="{StaticResource IconicButtonStyle}" MinWidth="100">
                    <StackPanel Orientation="Horizontal">
                      <Image Source="{StaticResource BmpCancel}" IsHitTestVisible="False" Stretch="None" />
                      <Label>Cancel</Label>
                    </StackPanel>
                  </Button>
                </StackPanel>
              </Grid>
            </ScrollViewer>
          </Border>
        </Grid>
      </Grid>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
        <Button Name="BtnAccpet" Style="{StaticResource IconicButtonStyle}"
                Click="BtnAccpet_OnClick" MinWidth="100">
          <StackPanel Orientation="Horizontal">
            <Image Source="{StaticResource BmpAccept}" IsHitTestVisible="False" Stretch="None" />
            <Label>Accept</Label>
          </StackPanel>
        </Button>
        <Button Name="BtnCancel" Style="{StaticResource IconicButtonStyle}"
                Click="BtnCancel_OnClick" MinWidth="100">
          <StackPanel Orientation="Horizontal">
            <Image Source="{StaticResource BmpCancel}" IsHitTestVisible="False" Stretch="None" />
            <Label>Cancel</Label>
          </StackPanel>
        </Button>
      </StackPanel>
    </Grid>
  </Grid>
</Window>