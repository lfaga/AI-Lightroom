<Window x:Class="AILightroom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mycontrols="clr-namespace:AILightroom.Ui.Controls"
        Title="AI Lightroom" Height="350" Width="525" Style="{StaticResource DefaultWindowStyle}"
        Loaded="Window_Loaded" Icon="/AILightroom;component/Resources/AppIcon.ico">
  <Grid Margin="8">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="200" Name="ParametersColumn" />
    </Grid.ColumnDefinitions>
    <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                  Margin="0,0,8,0">
      <Image Name="ImgResult" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="256"
             MinWidth="256" Stretch="None" Source="{StaticResource BmpPlaceholder}" />
    </ScrollViewer>
    <GridSplitter Name="GridSplit" Grid.Column="1" Width="1" HorizontalAlignment="Center"
                  VerticalAlignment="Stretch" />
    <Grid Grid.Column="2" Margin="8,0,0,0">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <StackPanel Grid.Row="0" Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
          <Label VerticalAlignment="Bottom" VerticalContentAlignment="Bottom">Provider</Label>
          <Button Name="BtnConfigProviders" Style="{StaticResource IconicButtonStyle}"
                  ToolTip="Configure Providers" Click="BtnConfigProviders_Click">
            <Image Source="{StaticResource BmpSmallSetup}" IsHitTestVisible="False" Stretch="None" />
          </Button>
        </StackPanel>
        <ComboBox Name="ComboProviders" />
      </StackPanel>
      <StackPanel Name="PanelForm" Orientation="Vertical" CanVerticallyScroll="True" Grid.Row="1">
        <TextBox Name="TxtPrompt" MinHeight="100" MinWidth="200" Text="Prompt" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" />
        <Slider LargeChange="5" SmallChange="0.5" Value="5" />
      </StackPanel>
      <Grid Grid.Row="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button Name="BtnSave" MinWidth="100" Click="BtnSave_Click" Grid.Column="0"
                Style="{StaticResource IconicButtonStyle}" Visibility="Hidden">
          <StackPanel Orientation="Horizontal">
            <Image Source="{StaticResource BmpSave}" IsHitTestVisible="False" Stretch="None" />
            <Label>Save</Label>
          </StackPanel>
        </Button>
        <Button Name="BtnExecute" Click="BtnExecute_Click" MinWidth="100" Grid.Column="2"
                Style="{StaticResource IconicButtonStyle}">
          <StackPanel Orientation="Horizontal">
            <Image Source="{StaticResource BmpPlay}" IsHitTestVisible="False" Stretch="None" />
            <Label>Execute</Label>
          </StackPanel>
        </Button>
      </Grid>
    </Grid>
  </Grid>
</Window>