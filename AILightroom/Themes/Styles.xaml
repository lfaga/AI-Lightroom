<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
                    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
                    xmlns:controls="clr-namespace:AILightroom.Ui.Controls">

  <!-- Primary Color Brushes -->
  <SolidColorBrush x:Key="DarkestBrush" Color="#FF202020" />
  <SolidColorBrush x:Key="DarkBrush" Color="#FF404040" />
  <SolidColorBrush x:Key="MediumBrush" Color="#FF909090" />
  <SolidColorBrush x:Key="LightBrush" Color="#FFD0D0D0" />


  <!-- Background Brushes -->
  <LinearGradientBrush x:Key="GradientDarkestBrush" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="#FF404040" Offset="0" />
    <GradientStop Color="#FF202020" Offset="1" />
  </LinearGradientBrush>

  <LinearGradientBrush x:Key="GradientDarkBrush" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="#FF303030" Offset="0" />
    <GradientStop Color="#FF505050" Offset="1" />
  </LinearGradientBrush>

  <LinearGradientBrush x:Key="GradientErrorBrush" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="#FF603030" Offset="0" />
    <GradientStop Color="#FF804040" Offset="1" />
  </LinearGradientBrush>

  <!-- DefaultWindowStyle -->
  <Style x:Key="DefaultWindowStyle" TargetType="Window">
    <Setter Property="Background" Value="{StaticResource GradientDarkestBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
  </Style>

  <!-- DefaultUserControlStyle -->
  <Style x:Key="DefaultUserControlStyle" TargetType="Control">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
  </Style>

  <Style x:Key="ErrorUserControlStyle" TargetType="Control">
    <Setter Property="Background" Value="{StaticResource GradientErrorBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
  </Style>

  <!-- Default TextBox Stlye -->
  <Style TargetType="TextBox">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
    <Setter Property="CaretBrush" Value="{StaticResource LightBrush}" />
  </Style>

  <Style TargetType="controls:IntTextBox">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
    <Setter Property="CaretBrush" Value="{StaticResource LightBrush}" />
  </Style>

  <Style TargetType="controls:NumberTextBox">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
    <Setter Property="CaretBrush" Value="{StaticResource LightBrush}" />
  </Style>

  <!-- Default Label Style -->
  <Style TargetType="Label">
    <Setter Property="Margin" Value="1" />
    <Setter Property="FontSize" Value="11" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <!-- Default ComboBox Stlye -->
  <Style TargetType="ComboBox">
    <Setter Property="Background" Value="{StaticResource GradientDarkestBrush}" />
    <Setter Property="Foreground" Value="{StaticResource DarkestBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
    <Setter Property="Opacity" Value="0.5" />
  </Style>

  <Style TargetType="ComboBoxItem">
    <Setter Property="Background" Value="{StaticResource GradientDarkestBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <!-- Default Scrollbars Style -->
  <Style TargetType="ScrollBar">
    <Setter Property="Opacity" Value="0.5" />
    <Setter Property="Background" Value="{StaticResource DarkBrush}" />
  </Style>

  <!-- IconicButton Style -->
  <Style x:Key="IconicButtonStyle" TargetType="Button">
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="Width" Value="32" />
    <Setter Property="Background" Value="{StaticResource GradientDarkestBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource MediumBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="4" />
    <Style.Triggers>
      <Trigger Property="IsFocused" Value="True">
        <Setter Property="BorderBrush" Value="LightSkyBlue" />
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style TargetType="Button">
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource MediumBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>


  <!-- ListBox Style -->
  <Style TargetType="ListBox">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <Style TargetType="ListBoxItem">
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <!-- TreeView Style -->
  <Style TargetType="TreeView">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <Style TargetType="TreeViewItem">
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="HeaderTemplate">
      <Setter.Value>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <Image Name="ImageIcon" />
            <ContentPresenter Content="{Binding}" VerticalAlignment="Center" />
          </StackPanel>
          <DataTemplate.Triggers>
            <MultiDataTrigger>
              <MultiDataTrigger.Conditions>
                <Condition
                  Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=HasItems}"
                  Value="False" />
              </MultiDataTrigger.Conditions>
              <Setter TargetName="ImageIcon" Property="Source" Value="{StaticResource BmpSmallBullet}" />
            </MultiDataTrigger>
          </DataTemplate.Triggers>
        </DataTemplate>
      </Setter.Value>
    </Setter>
    <Style.Triggers>
      <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=HasItems}" Value="False">
        <Setter Property="Margin" Value="-16,0,0,0" />
      </DataTrigger>
    </Style.Triggers>
  </Style>

  <Style TargetType="CheckBox">
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="12" />
  </Style>

  <!-- ListView Style -->
  <Style TargetType="ListView">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <Style TargetType="StatusBar">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <!-- Toolbar Styles -->
  <Style TargetType="ToolBarTray">
    <Setter Property="Background" Value="{StaticResource GradientDarkestBrush}" />
  </Style>

  <Style TargetType="ToolBar">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
  </Style>

  <Style TargetType="ToolBarOverflowPanel">
    <Setter Property="Background" Value="{StaticResource DarkBrush}" />
  </Style>
</ResourceDictionary>